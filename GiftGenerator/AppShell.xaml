<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="GiftGenerator.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:home="clr-namespace:GiftGenerator.Features.Home"
       xmlns:login="clr-namespace:GiftGenerator.Features.Login"
       Shell.FlyoutBehavior="Disabled">

    <ShellContent Title="Login"
                  ContentTemplate="{DataTemplate login:LoginPage}"
                  Route="LoginPage" />

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate home:MainPage}" />

</Shell>
